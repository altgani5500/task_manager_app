<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:widget="http://schemas.android.com/apk/res-auto"

    android:padding="10dp">

    <styleandfont.CustomButtona
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:paddingLeft="5dp"
        android:id="@+id/editText8"
        android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
        android:hint="متاح حاليا"
        android:background="@drawable/whiteb"

        android:layout_marginBottom="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <styleandfont.CustomButtona
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_fiber_busy_record_black_24dp"
        android:id="@+id/editText12"
        android:hint="مشغول حاليا"
        android:maxLength="20"
        android:background="@drawable/whiteb"
        android:textSize="14sp"
        android:gravity="center_vertical|center"
        android:inputType="textMultiLine"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/editText8"
        android:layout_marginBottom="3dp" />

    <styleandfont.CustomButtona
        android:drawableLeft="@drawable/ic_fiber_off_record_black_24dp"
        android:background="@drawable/whiteb"
        android:id="@+id/app"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="غير متاح"
        android:onClick="FragmentTwoClick"
        android:layout_weight="2"
        android:layout_marginLeft="0dp"

        android:textSize="14sp"
        android:layout_below="@+id/editText12"
       />


</RelativeLayout>