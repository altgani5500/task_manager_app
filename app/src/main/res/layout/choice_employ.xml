<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ienovo.bnan.Choice_employ">


     <styleandfont.CustomButtona
        android:drawableRight="@drawable/ic_next_week_black_24dp2"
        android:id="@+id/toolbar2"
        android:elevation="4dp"
        android:text="اختر الموظف"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="right|center"
        android:textSize="15sp"
        android:textColor="#fff"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <styleandfont.CustomButtona

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/erorrp"
            android:textSize="14sp"
            android:textColor="#000"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/er"
            android:text="فشل الاتصال اعد المحاولة"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginBottom="40dp" />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout

        android:layout_centerHorizontal="true"
        android:id="@+id/swipe_container2"

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar2"
        android:layout_above="@+id/button3">




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recylcerView22"


        android:layout_below="@+id/toolbar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />
    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.FloatingActionButton
       android:layout_centerHorizontal="true"
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="50dp"
        fab:fab_size="normal"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        fab:srcCompat="@drawable/ic_send_black_242dp"
        android:layout_marginBottom="35dp"
   >

    </android.support.design.widget.FloatingActionButton>
    <styleandfont.CustomButtona
        android:text="متابعة الارسال"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/button3"
android:paddingTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
