            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/edit"-->
            <!--fab:fab_label="Menu Item 3"-->
            <!--fab:fab_size="mini" />-->
    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
