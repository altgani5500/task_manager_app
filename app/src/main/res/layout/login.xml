<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <styleandfont.MyTextViewbigr3
        android:drawableRight="@drawable/ic_login_24dp"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:text="تسجيل الدخول"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"

        android:gravity="right|center"
        android:textSize="15sp"
        android:textColor="#fff"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" />

    <!--android:text="Digtal Card"-->
    <!--android:text="ديجتال كارد"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:background="@drawable/test3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">
        <styleandfont.MyTextViewbigr2
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"


            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/whiteb"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="15dp">

            <!--android:singleLine="true"-->
            <!--android:singleLine="true"-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <styleandfont.MyEditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_perm_identity_black_24dp"
                        android:drawableTint="@color/colorPrimary"
android:textSize="14dp"
                        android:maxLines="1"
                        android:hint="اسم المستخدم"
                        android:inputType="text"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:gravity="right" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <styleandfont.MyEditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="كلمة المرور"
                        android:inputType="textPassword"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:gravity="right" />
                </android.support.design.widget.TextInputLayout>

                <styleandfont.MyTextViewbigr3
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="5dp"
                    android:text="نسيت كلمة السر ؟"
                    android:gravity="center" />


                <styleandfont.CustomButtona
                    android:id="@+id/login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redb"
                    android:text="دخـول"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>
        </RelativeLayout>



        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/user_profile_image_background"
            android:elevation="4dp"
            android:src="@drawable/ic_person_black_24dp" />


    </RelativeLayout>

</RelativeLayout>
